function refreshCaptcha(){var a=document.images["captchaimg"];a.src=a.src.substring(0,a.src.lastIndexOf("?"))+"captcha/rand/"+ Math.random()*1e3}
function refreshCaptcha2(){var a=document.images["captchaimg"];a.src=a.src.substring(0,a.src.lastIndexOf("?"))+"captchar/rand/"+ Math.random()*1e3}
function reqPost(){var a=$("input[name='request_name']").val();var b=$("input[name='request_email']").val();var c=$("textarea[name='request_txt']").val();var d=$("input[name='request_captcha']").val();if(a==''){fx.displayMessage('Bạn chưa nhập tên phim yêu cầu.');}
if(b==''){fx.displayMessage('Bạn chưa nhập email.');}
if(c.length<10){fx.displayMessage('Nội dung yêu cầu phải lớn hơn 10 ký tự!');}
if(d==''){fx.displayMessage('Bạn chưa nhập mã xác nhận.');}
if(a!=''&&b!=''&&c.length>10&&d!=''){$.ajax({type:"POST",url:AjaxURL,dataType:"json",cache:false,data:{reqSend:1,name:a,mail:b,txt:c,capcha:d},timeout:5000,error:function(err,textStatus,jqXHR){fx.displayMessage('Lỗi thực thi, vui lòng thử lại.');},success:function(data){if(data==1){fx.displayMessage('Lỗi, Mail Bạn Nhập không đúng.');}else if(data==2){fx.displayMessage('Lỗi, mã xác nhận bạn nhập không đúng.');}else{fx.displayMessage('Yêu cầu của bạn đã được gửi. Thân!');$("#form-content").css({'display':'none'});}}});}
return false;}
